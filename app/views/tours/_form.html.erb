<%= form_for(@tour, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @tour.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h4>

      <ul>
      <% @tour.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">ツアーコード</label>
      <div class="col-lg-10">
        <%= f.text_field :code, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">ツアー名称</label>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">参加人数</label>
      <div class="col-lg-10">
        <ul class="list-inline">
          <li><%= f.text_field :participant_num, :class => "form-control" %></li>
          <li><span>人</span></li>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">立寄り直売所</label>
      <div class="col-lg-10">
        <%= f.select :store_id, options_for_select(Store.seloptions, selected: @tour.store_id), {include_blank: true}, {class: "form-control"}  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <a href="/schedules/<%= @date.year %>/<%= @date.month %>/<%= @date.day %>/<%= @app_store.id %>" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-circle-arrow-left"></span> スケジュールに戻る</a>
        
        <%= link_to "/tours", :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span> ツアー一覧に戻る
        <% end %>
        <button type="submit" class="btn btn-primary">登録する</button>
      </div>
    </div>
  </fieldset>

<% end %>
