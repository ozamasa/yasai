<%= form_for(@user, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

　　<fieldset>
    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">名前</label>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">名前（カナ）</label>
      <div class="col-lg-10">
        <%= f.text_field :name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">Eメール</label>
      <div class="col-lg-10">
        <%= f.text_field :email, type: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">住所</label>
      <div class="col-lg-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">電話</label>
      <div class="col-lg-10">
        <%= f.text_field :tel, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">ユーザー区分</label>
      <div class="col-lg-10">
        <%= f.select :auth, options_for_select(User.auth_seloptions, selected: @user.auth), {include_blank: true}, {class: "form-control"} %>
      </div>
    </div>
          
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= link_to users_path, :class => 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-circle-arrow-left"></span> 一覧に戻る
        <% end %>
        <%= f.submit '登録する', :class => "btn btn-primary btn-sm" %>
      </div>
    </div>
  
  </fieldset>
<% end %>
