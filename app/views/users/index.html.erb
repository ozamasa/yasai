<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <span class="title page_title">ユーザー一覧</span>
    <%= link_to new_user_path, :class => 'btn btn-default btn-sm' do %>
      <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>名前カナ</th>
          <th>Eメール</th>
          <th>区分</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @users) do |user| %>
          <td><%= link_to user.name, user %></td>
          <td><%= user.name_kana %></td>
          <td><%= user.email %></td>
          <td><%= user.display_auth %></td>
          <td class="text-center">
            <%= link_to edit_user_path(user) do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %></td>
          <td class="text-center">
            <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %></td>

        <% end %>
      </tbody>
    </table>
  </div>

</div>

