<%= form_for(@cultivar, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @cultivar.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@cultivar.errors.count, "error") %> prohibited this cultivar from being saved:</h4>

      <ul>
      <% @cultivar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <fieldset>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">名前</label>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">単位</label>
      <div class="col-lg-10">
        <%= f.text_field :unit, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= link_to cultivars_path, :class => 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-circle-arrow-left"></span> 一覧に戻る
        <% end %>
        <button type="submit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-ok-sign"></span> 登録する</button>
      </div>
    </div>

  </fieldset>
<% end %>