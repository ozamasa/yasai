<div class="container" style="margin-top:60px;">

  <div class="page-header">
    <div class="title page_title">イベント詳細</div>
  </div>

  <form class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">直売所</label>
      <div class="col-lg-10">
        <%= @event.store.name rescue nil %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">タイトル</label>
      <div class="col-lg-10">
        <%= @event.title %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">開始日時</label>
      <div class="col-lg-10">
      	<%= @event.start_at.strftime("%Y/%m/%d %H:%M") if @event.start_at %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">終了日時</label>
      <div class="col-lg-10">
      	<%= @event.end_at.strftime("%Y/%m/%d %H:%M") if @event.end_at %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">備考</label>
      <div class="col-lg-10">
        <%= hbr @event.notes %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= link_to events_path, :class => 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-circle-arrow-left"></span> 一覧に戻る
        <% end %>
        <%= link_to edit_event_path(@event), :class => 'btn btn-primary btn-sm' do %>
	    　　<span class="glyphicon glyphicon-pencil"></span>　編集する
	  　　<% end %>
      </div>
    </div>

    </fieldset>


  </form>

</div>