<%= form_for(@event, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">直売所</label>
      <div class="col-lg-10">
        <%= @event.store.name rescue nil %>
        <%= f.hidden_field :store_id %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">タイトル</label>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">開始日時</label>
      <div class="col-lg-10">
        <%= f.text_field :start_at, value: (@event.start_at.strftime('%Y/%m/%d %H:%M') if @event.start_at), class: 'form-control datetimepicker' %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">終了日時</label>
      <div class="col-lg-10">
        <%= f.text_field :end_at, value: (@event.end_at.strftime('%Y/%m/%d %H:%M') if @event.end_at), class: 'form-control datetimepicker' %>
      </div>
    </div>

    <div class="form-group">
      <label for="#" class="col-lg-2 control-label">備考</label>
      <div class="col-lg-10">
        <%= f.text_area :notes, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to events_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span> 一覧に戻る
        <% end %>
        <%= f.submit '登録する', :class => "btn btn-primary" %>
      </div>
    </div>

  </fieldset>

<% end %>
