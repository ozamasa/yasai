<div class="container" style="margin-top:60px;">

<div class="page-header">
  <h1>ご注文内容</h1>

  <%= link_to orders_path(tour: @tour.code), :class => 'btn btn-default' do %>
    <i class="fa fa-arrow-left"></i> 注文一覧へ戻る
  <% end %>

</div>

<div class="panel panel-primary">
  <div class="panel-heading">お客様番号: <%= @order.user_id %></div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>商品</th>
            <th>数量</th>
            <th>金額</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @order.order_items) do |order_item| %>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.number %></td>
            <td><%= number_to_currency(order_item.price, :format => "%u%n", :unit => "￥", precision: 0) %></td>
          <% end %>
        </tbody>

        <tfoot>
          <tr>
            <td colspan="2"><p class="pull-right">合計金額</p></td>
            <td><%= number_to_currency(@order.amount, :format => "%u%n", :unit => "￥", precision: 0) %></td>
          </tr>
        </tfoot>

      </table>
    </div>
  </div>
</div>

</div>
