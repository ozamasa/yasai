<div class="container" style="margin-top:60px;">

  <div class="row">
    <ul class="nav navbar-nav pull-right">
      <li><a href="/baskets/<%= @app_tour.code %>/<%= @participant %>"><i class="fa fa-shopping-cart"></i>　カートをみる</a></li>
    </ul>
  </div>

  <div class="row">
    <% @items.each_with_index do |item, i| %>
      <div class="col-md-4 col-sm-6">
        <div class="panel panel-default" style="background-color:#FFF">
          <!-- Default panel contents -->
          <div class="panel-heading">
            <span class="title_lg"><%= item.name %></span>
            <span class="pull-right">
              <span class="title_lg" style="font-size:150%;color:#e74c3c"><%= number_to_currency(item.price, :format => "%u%n", :unit => "", precision: 0) %></span>
              <span class="title" style="font-size:80%;">円</span>
            </span>
          </div>

          <div class="panel-body">
            <span><%= img_tag item.image_path, width: 300, class: "img-responsive img-rounded" %></span>
          </div>

          <table class="table">
            <tr>
              <td><%= item.description %></td>
            </tr>
            <tr>
              <td>
              <div class="row text-center">
                <div class="col-xs-12"><i class="fa fa-shopping-cart"></i> <span style="font-size:80%">カートにいれる</span></div>
                <div class="col-xs-12">
                  <% (1..5).each do |i| %>
                    <a class="btn btn-success" href="/items/<%= item.id %>/putin/<%= @app_tour.code %>/<%= @participant %>?num=<%= i %>"><span class="title"><%= i %></span></a>
                  <% end %>
                </div>
              </td>
            </tr>

          </table>
        </div>
      </div>
    <% end %>
  </div>

</div>